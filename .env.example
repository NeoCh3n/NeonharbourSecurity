############################################################
# NeonHarbour Security - Environment Example (DeepSeek)
# Copy to `.env` and fill in placeholders (do NOT commit secrets)
############################################################

# Backend
JWT_SECRET=your-super-secure-jwt-secret-key-here
DATABASE_URL=postgresql://neonharbour:neonharbour123@localhost:5432/neonharbour
ENABLE_RLS=false

# AI Provider (DeepSeek)
# Fill in your DeepSeek API key in the local `.env` file (do NOT commit secrets)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Threat Intelligence (optional)
USE_VIRUSTOTAL=false
VIRUSTOTAL_API_KEY=

# Splunk (optional, read-only)
SPLUNK_BASE_URL=https://localhost:8089
# SPLUNK_USERNAME=admin
# SPLUNK_PASSWORD=your_password
# SPLUNK_BEARER_TOKEN=your-splunk-bearer-token
# SPLUNK_SESSION_TOKEN=your-splunk-session-key
SPLUNK_SEARCH=search index=_internal earliest=-24h | head 200

# Frontend
VITE_API_BASE_URL=http://localhost:3000
VITE_GTM_ID=
VITE_CLARITY_ID=
VITE_VWO_ID=
VITE_HUBSPOT_PORTAL_ID=
VITE_HUBSPOT_FORM_ID=
