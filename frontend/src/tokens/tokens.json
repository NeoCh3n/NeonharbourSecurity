{
  "meta": {
    "name": "NeonHarbour Security Desktop Tokens",
    "version": "0.1.0",
    "baselineGrid": 8,
    "cardRadius": 16,
    "themes": ["light", "dark", "high-contrast"]
  },
  "radius": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px"
  },
  "spacing": {
    "xxs": 4,
    "xs": 8,
    "sm": 12,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 40
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 2px 8px rgba(0,0,0,0.08)",
    "lg": "0 8px 24px rgba(0,0,0,0.12)"
  },
  "font": {
    "family": "Inter, 'Source Han Sans', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Apple Color Emoji', 'Segoe UI Emoji'",
    "sizes": {
      "xs": 12,
      "sm": 14,
      "md": 16,
      "lg": 20,
      "xl": 24,
      "xxl": 32
    },
    "weights": { "regular": 400, "semibold": 600 },
    "lineHeight": 1.5
  },
  "severity": {
    "low": { "light": "#7FB77E", "dark": "#8CD88A", "hc": "#00FF00" },
    "medium": { "light": "#F3C969", "dark": "#FFD875", "hc": "#FFFF00" },
    "high": { "light": "#FF8A65", "dark": "#FFA07A", "hc": "#FF8000" },
    "critical": { "light": "#E53935", "dark": "#FF5252", "hc": "#FF0000" }
  },
  "theme": {
    "light": {
      "bg": "#0F1115",
      "surface": "#FFFFFF",
      "surfaceAlt": "#F7F8FA",
      "overlay": "#0F1115",
      "text": "#1F2329",
      "muted": "#6B7280",
      "primary": "#2D6AE3",
      "primaryFg": "#FFFFFF",
      "border": "#E5E7EB",
      "ring": "#93C5FD",
      "success": "#16A34A",
      "warning": "#D97706",
      "danger": "#DC2626",
      "info": "#2563EB"
    },
    "dark": {
      "bg": "#0B0F14",
      "surface": "#111827",
      "surfaceAlt": "#0F172A",
      "overlay": "#0B0F14",
      "text": "#E5E7EB",
      "muted": "#9CA3AF",
      "primary": "#60A5FA",
      "primaryFg": "#0B0F14",
      "border": "#1F2937",
      "ring": "#1D4ED8",
      "success": "#22C55E",
      "warning": "#F59E0B",
      "danger": "#F87171",
      "info": "#3B82F6"
    },
    "high-contrast": {
      "bg": "#000000",
      "surface": "#000000",
      "surfaceAlt": "#0A0A0A",
      "overlay": "#000000",
      "text": "#FFFFFF",
      "muted": "#D1D5DB",
      "primary": "#00E5FF",
      "primaryFg": "#000000",
      "border": "#FFFFFF",
      "ring": "#00E5FF",
      "success": "#00FF00",
      "warning": "#FFFF00",
      "danger": "#FF0000",
      "info": "#00BFFF"
    }
  }
}

